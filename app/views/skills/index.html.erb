<div class="container">
  <div class="row">
    <h3>My Skills</h3>
    <% @skills.each do |skill| %>
      <div class="col-md-4">
        <div class="card" style="background-color: #333; color: #fff; margin-bottom: 20px;">
          <div class="card-body">
            <div class="row">
              <div class="col-6">
                <h5 class="card-title"><%= skill.name %></h5>
                <% proficiency = skill.proficiency.to_i %>
              </div>
              <div class="col-6">
                <h6 class="card-title">Proficiency(<%= proficiency * 10 %>%)</h6>
                <div class="progress">
                  <div class="progress-bar" role="progressbar" style="width: <%= proficiency * 10 %>%;" aria-valuenow="<%= proficiency * 10 %>" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
