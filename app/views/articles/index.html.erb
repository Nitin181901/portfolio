<div class="container">
  <div class="row">
		<h3>Articles</h3>
    <% @articles.each do |article| %>
      <div class="col-md-4">
        <div class="card" style="background-color: #333; color: #fff; margin-bottom: 20px;">
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>	
            <p class="card-text"><%= article.content %></p>
            <% unless article.github_link.blank? %>
            	<a href="<%= article.github_link %>" class="btn btn-light">GitHub link</a>
        		<% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
