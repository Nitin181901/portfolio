<div class="container">
  <div class="row">
	<h3>My Projects</h3>
    <% @projects.each do |project| %>
      <div class="col-md-4">
        <div class="card" style="background-color: #333; color: #fff; margin-bottom: 20px;">
          <div class="card-body">
            <h5 class="card-title"><%= project.title %></h5>	
            <p class="card-text"><%= project.description %></p>
            <% unless project.github_link.blank? %>
            	<a href="<%= project.github_link %>" class="btn btn-light">GitHub link</a>
        		<% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
